{
  "name": "psn-api",
  "description": "A low-level API for getting data from the PlayStation Network.",
  "version": "0.0.0-development",
  "main": "dist/index.js",
  "module": "dist/psn-api.esm.js",
  "typings": "dist/index.d.ts",
  "author": "Wes Copeland",
  "license": "MIT",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "dts watch",
    "build": "dts build",
    "prepare": "dts build",
    "format": "prettier --write . '**/*.{json,md,js,ts,tsx}'",
    "format:write": "prettier --write . '**/*.{json,md,js,ts,tsx}'",
    "format:check": "prettier --check . '**/*.{json,md,js,ts,tsx}'",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "lint:fix": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx . --fix",
    "test": "dts test",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "isomorphic-unfetch": "^3.1.0",
    "urlcat": "^2.0.4"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@size-limit/preset-small-lib": "^6.0.3",
    "@types/faker": "^5.5.9",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "cz-conventional-changelog": "^3.3.0",
    "dts-cli": "^0.19.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sonarjs": "^0.10.0",
    "eslint-plugin-unicorn": "^36.0.0",
    "faker": "^5.5.3",
    "husky": "^4.3.8",
    "msw": "^0.35.0",
    "prettier": "2.4.1",
    "pretty-quick": "^3.1.1",
    "semantic-release": "^18.0.0",
    "size-limit": "^6.0.3",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4"
  },
  "size-limit": [
    {
      "path": "dist/psn-api.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/psn-api.esm.js",
      "limit": "10 KB"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "master",
      "next"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/achievements-app/psn-api.git"
  }
}
